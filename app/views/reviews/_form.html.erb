
<%= simple_form_for([@dj,@review]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :rating, collection: Review::RATING, prompt: "Select Rating" %>
    <%= f.input :comment %>
    <!-- <%= f.association :host %>
    <%= f.association :dj %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
