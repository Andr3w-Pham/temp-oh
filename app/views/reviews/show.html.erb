<div class="card mx-auto" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title text-center">Review</h5>

    <p class="card-text text-center">Rating: <%= @review.rating %></p>
    <p class="card-text text-center">Reviewed by: <%= @review.host.name %></p>
    <p class="card-text text-center">Comment: <%= @review.comment %></p>
    <p class="card-text text-center">Review for: <%= @review.dj.name %></p>
    <br>
    <br>
    <%= link_to 'Back', dj_reviews_path,class:"card-link btn btn-warning" %>
  </div>
</div>
