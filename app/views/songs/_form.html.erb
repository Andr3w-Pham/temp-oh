
<%= simple_form_for([@dj,@song]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title, placeholder: 'Name your track' %>
    <%= f.input :genre, collection: Song::GENRE, prompt: "Select Genre" %>
    <%= f.input :description, placeholder: 'Describe your track' %>
    <%= f.input :image, as: :file %>
    <%= f.input :audio, as: :file %>
    <!-- <%= f.association :dj %> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
