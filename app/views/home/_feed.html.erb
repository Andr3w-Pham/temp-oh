<div class="card mx-auto" style="width: 30rem;">
  <% @djs.each do |dj| %>
    <img class="card-img-top">
    <%= image_tag(dj.image_url, width: "100%", height:"100%")%>
  </img>
  <!-- <div id="<%= dj.id%>"> -->
    <div id="dj-card-body" class="card-body">
      <h1 id="dj-card-header" class="card-header"><%= dj.name %></h1>
      <div id="dj-card-text" class="card-text">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Description: <%= dj.description %></li>
          <li class="list-group-item">Location: <%= dj.location %></li>
          <li class="list-group-item">Portfolio: <%= dj.portfolio %></li>
          <li class="list-group-item">Rate: $<%= dj.rate %> per hour</li>
          <li class="list-group-item"><%= link_to 'Book', new_booking_path %></li>
        </ul>
      </div>
    </div>
  </div>
<% end %>
</div>
