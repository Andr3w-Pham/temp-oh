<% @djs.each do |dj| %>
  <div class="text-center">
    <ul class="list-unstyled">
      <div class="card">
        <li class="card-body">
          <%= dj.name %>
          <br>
          <br>
          <%= audio_tag dj.audio_url,:autoplay=>false,:controls => true, class:"mx-auto d-block" unless dj.audio.blank? %>
          <br>
          <%= link_to 'View Profile', dj, class:"btn btn-primary" %>
          <br><br>
          <% if dj.user == current_user %>
            <%= link_to 'Edit', edit_dj_path(dj), class:"btn btn-primary" %>
            <br><br>
            <%= link_to 'Destroy', dj, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
          <% end %>
        </li>
      </div>
    </ul>
  </div>
<% end %>
