<% @djs.each_slice(3) do |djs| %>
  <div class="row">
    <% djs.each do |dj| %>
      <div id="dj-row" class="col-md-4">
        <div class="text-center">
          <ul class="list-unstyled">
            <div class="card">
              <li class="card-body">
                <h3><%= dj.name %></h3>
                <%= link_to image_tag(dj.image_url, class:"card-img-top"),dj_path(dj) %>
                <br><br>
                <%= link_to 'Uploads',  dj_songs_path(dj), class:"btn btn-primary" %>
                <%= link_to 'Book',  new_dj_booking_path(dj),class:"btn btn-primary" %>
                <br><br>
                <%= link_to 'Review',   new_dj_review_path(:dj_id => dj.id), class:"btn btn-primary" %>
                <% if dj.user == current_user %>
                  <%= link_to 'Upload',  new_dj_song_path(dj), class:"btn btn-primary" %>
                  <br>
                  <br>
                  <%= link_to 'Bookings',  dj_bookings_path(dj), class:"btn btn-primary" %>
                  <br>
                  <br>
                  <%= link_to 'Your Reviews', dj_reviews_path(dj), class:"btn btn-primary" %>
                  <br>
                  <br>
                  <%= link_to 'Edit', edit_dj_path(dj), class:"btn btn-primary" %>
                  <br>
                  <br>
                  <%= link_to 'Destroy', dj, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
                <% end %>
              </li>
            </div>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
