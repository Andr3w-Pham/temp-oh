
<h1>Bookings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Dj</th>
      <th>Host</th>
      <th>Date</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.dj.name %></td>
        <td><%= booking.host.name %></td>
        <td><%= booking.date %></td>
        <td><%= booking.time %></td>
        <td><%= link_to 'Show', dj_booking_path(@dj,booking) %></td>

          <td><%= link_to 'Edit', edit_dj_booking_path(@dj,booking) %></td>
          <td><%= link_to 'Destroy', dj_booking_path(@dj,booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
