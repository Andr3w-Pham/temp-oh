<%= simple_form_for([@dj,@booking]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <!-- <%= f.association :host %>
    <%= f.association :dj %> -->
    <%= f.input :address, placeholder: 'eg. 1 Bay St, Ultimo NSW 2007' %>
    <%= f.input :date %>
    <%= f.input :time, placeholder: 'eg. 7pm -12pm' %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
